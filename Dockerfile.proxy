FROM ubuntu:24.04

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    net-tools \
    tcpdump \
    && rm -rf /var/lib/apt/lists/*

# Copy proxy server
COPY proxy_server.py /usr/local/bin/proxy_server.py
RUN chmod +x /usr/local/bin/proxy_server.py

WORKDIR /root

# Default environment variables
ENV PROXY_PORT=8888
ENV TARGET_HOST=bpf-target-server
ENV TARGET_PORT=8080

EXPOSE 8888

# Run proxy server
CMD ["python3", "/usr/local/bin/proxy_server.py"]